<main>
    <div class="hero">
        {{#with hero}}
            <h1>{{title}}</h1>
            <p>{{description}}</p>
            <a href="{{button.url}}" class="btn btn-hero">{{button.text}}</a>
        {{/with}}
    </div>
    <div class="about">
        {{#with about}}
            <h2>{{heading}}</h2>
            <span>{{info}}</span>
        {{/with}}
    </div>
    <div class="articles">
        <div class="articles_title">
            <h2>Our Articles</h2>
            <button><a href="#articles" class="btn btn-hero">View All</a></button>
        </div>
        <div class="card-group">
        {{#each articles}}
             {{> articleCardDark}}
        {{/each}}
        </div>
    </div>
</main>
